---
import DayRoutine from "../../components/DayRoutine.astro";
import type { Routine } from "../../data/routines";
import { routines } from "../../data/routines";
import Layout from "../../layouts/Layout.astro";

// Obtener el parÃ¡metro del dÃ­a
const { day } = Astro.params as { day: string };

// Verificar si existe la rutina para el dÃ­a solicitado
const routine: Routine = routines[day.toLowerCase()];
if (!routine) {
    throw new Error(`Rutina para ${day} no encontrada`);
}

// Exportar la funciÃ³n getStaticPaths
export async function getStaticPaths() {
    return Object.keys(routines).map((key) => ({
        params: { day: key },
    }));
}
---

<Layout title={`Rutina de ${routine.day}`}>
    <DayRoutine
        day={routine.day}
        routine={routine.routine}
        description={routine.description}
        exercises={routine.exercises}
    />
</Layout>
