---
interface Props {
    name: string;
    day: string;
    routine: string;
    sets: number;
    reps: string;
    rest: string;
    muscles_worked: string[];
    description: string;
    tips?: string[];
    grip?: string[];
    image?: string;
    video?: string;
}

const { name, day, routine, sets, reps, rest, muscles_worked, description, tips, grip, image, video } = Astro.props;
---
    <h1 class="text-3xl font-bold mb-2 text-white">{name}</h1>
    <p class="text-gray-300 mb-6">
        Este ejercicio forma parte de la rutina de {day} ({routine}).
    </p>

    <!-- Sección: Detalles del Ejercicio -->
    <div class="bg-gray-800 text-white border border-gray-700 rounded-lg flex flex-col h-full hover:bg-gray-700 hover:border-gray-600 cursor-pointer p-4 mb-4 shadow-md">
        <h2 class="text-2xl font-semibold mb-2">Detalles del Ejercicio</h2>
        <p>
            <strong>Sets:</strong> {sets}<br />
            <strong>Reps:</strong> {reps}<br />
            <strong>Rest:</strong> {rest}<br />
            <strong>Muscles Worked:</strong> {muscles_worked.join(', ')}
        </p>
    </div>

    <!-- Sección: Descripción -->
    <div class="bg-gray-800 text-white border border-gray-700 rounded-lg flex flex-col h-full hover:bg-gray-700 hover:border-gray-600 cursor-pointer p-4 mb-4 shadow-md">
        <h2 class="text-2xl font-semibold mb-2">Descripción</h2>
        <p>{description}</p>
    </div>

    <!-- Sección: Tips -->
    {tips && tips.length > 0 && (
        <div class="bg-gray-800 text-white border border-gray-700 rounded-lg flex flex-col h-full hover:bg-gray-700 hover:border-gray-600 cursor-pointer p-4 mb-4 shadow-md">
            <h2 class="text-2xl font-semibold mb-2">Tips</h2>
            <ul class="list-disc pl-5">
                {tips.map((tip) => (
                    <li>{tip}</li>
                ))}
            </ul>
        </div>
    )}

    <!-- Sección: Grip -->
    {grip && grip.length > 0 && (
        <div class="bg-gray-800 text-white border border-gray-700 rounded-lg flex flex-col h-full hover:bg-gray-700 hover:border-gray-600 cursor-pointer p-4 mb-4 shadow-md">
            <h2 class="text-2xl font-semibold mb-2">Ejecución</h2>
            <ul class="list-disc pl-5">
                {grip.map((g) => (
                    <li>{g}</li>
                ))}
            </ul>
        </div>
    )}

    <!-- Sección: Imagen -->
    {image && (
        <div class="bg-gray-800 text-white border border-gray-700 rounded-lg flex flex-col h-full hover:bg-gray-700 hover:border-gray-600 cursor-pointer mb-4 shadow-md">
            <img src={image} alt={name} class="w-full rounded-lg" />
        </div>
    )}

    <!-- Seccion: video -->
    {video && (
        <div class="bg-gray-800 text-white border border-gray-700 rounded-lg flex flex-col h-full hover:bg-gray-700 hover:border-gray-600 cursor-pointer mb-4 shadow-md">
            <video controls class="w-full rounded-lg">
                <source src={video} type="video/mp4" />
                Your browser does not support the video tag.
            </video>
        </div>
    )}

    <!-- Botón para regresar al día -->
    <div class="mt-6">
        <a href={`/rutina/${day.toLowerCase()}`} class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg">
            Regresar a {day}
        </a>
    </div>