---
import type { Exercise } from "../data/routines";
interface Props {
    day: string;
    routine: string;
    description: string;
    exercises: Exercise[];
}

const { day, routine, description, exercises } = Astro.props;
---


    <h1 class="text-4xl font-bold mb-4 text-white">{day} - {routine}</h1>
    <p class="text-gray-300 mb-6">{description}</p>
    <h2 class="text-2xl font-semibold mb-4 text-white">Ejercicios:</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {
            exercises.map((exercise) => (
                <div class="bg-gray-800 text-white border border-gray-700 rounded-lg shadow-lg p-6 hover:bg-gray-700 hover:border-gray-600 cursor-pointer">
                    <a
                        href={`/rutina/${day.toLowerCase()}/${exercise.slug}`}
                        class="text-lg font-semibold text-white"
                    >
                        {exercise.name}
                        <p class="text-gray-400 mt-2">
                            Series: {exercise.sets}<br />
                            Repeticiones: {exercise.reps}<br />
                            Descanso: {exercise.rest}
                        </p>
                    </a>
                </div>
            ))
        }
    </div>

    <!-- BotÃ³n para regresar al Home -->
    <div class="mt-6">
        <a href="/" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg">
            Regresar al Home
        </a>
    </div>
