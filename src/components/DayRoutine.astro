---
import type { Exercise } from "../data/routines";
interface Props {
    day: string;
    routine: string;
    description: string;
    exercises: Exercise[];
}

const { day, routine, description, exercises } = Astro.props;
---


    <h1 class="text-4xl font-bold mb-4 text-rosa-custom-900">{day} - {routine}</h1>
    <p class="text-rosa-custom-700 mb-6">{description}</p>
    <h2 class="text-2xl font-semibold mb-4 text-rosa-custom-800">Ejercicios:</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {
            exercises.map((exercise) => (
                <div class="bg-white text-rosa-custom-900 border border-rosa-custom-200 rounded-lg shadow-lg p-6 hover:bg-rosa-custom-50 hover:border-rosa-custom-300 hover:shadow-xl cursor-pointer transition-all duration-300">
                    <a
                        href={`/rutina/${day.toLowerCase()}/${exercise.slug}`}
                        class="text-lg font-semibold text-rosa-custom-800"
                    >
                        {exercise.name}
                        <p class="text-rosa-custom-600 mt-2">
                            Series: {exercise.sets}<br />
                            Repeticiones: {exercise.reps}<br />
                            Descanso: {exercise.rest}
                        </p>
                    </a>
                </div>
            ))
        }
    </div>

    <!-- BotÃ³n para regresar al Home -->
    <div class="mt-6">
        <a href="/" class="bg-rosa-custom-500 hover:bg-rosa-custom-600 text-white font-semibold py-2 px-4 rounded-lg shadow-md hover:shadow-lg transition-all duration-300">
            Regresar al Home
        </a>
    </div>
